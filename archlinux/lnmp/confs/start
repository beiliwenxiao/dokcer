#/bin/bash

sleep 30

[ ! -d "/home/vhosts/default" ] && \
    mkdir -p /home/vhosts/default/logs \
    && mkdir -p /home/vhosts/default/public

chown tom:tom -R /home/vhosts

/usr/bin/sshd -D
/usr/bin/nginx -c /etc/nginx/nginx.conf
/usr/bin/php-fpm -c /etc/php/php.ini
/usr/bin/redis-server /etc/redis.conf
/usr/bin/memcached -l 127.0.0.1 -o modern
/usr/bin/mysqld -u root &
